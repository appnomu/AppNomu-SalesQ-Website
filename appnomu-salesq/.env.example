# AppNomu SalesQ Environment Configuration
# Copy this file to .env and update the values as needed

# Environment (development, staging, production)
APP_ENV=production

# Site Configuration
APP_URL=https://appnomu.com/landing
ASSET_URL=/landing/assets

# Database Configuration (if needed)
DB_HOST=localhost
DB_NAME=appnomu_salesq
DB_USER=db_user
DB_PASSWORD=db_password

# API Keys (if any)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=mail.appnomu.com
MAIL_PORT=587
MAIL_USERNAME=noreply@appnomu.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@appnomu.com

# Cloudflare Turnstile Configuration
TURNSTILE_SITE_KEY=your_turnstile_site_key
TURNSTILE_SECRET_KEY=your_turnstile_secret_key
MAIL_FROM_NAME="AppNomu SalesQ"
